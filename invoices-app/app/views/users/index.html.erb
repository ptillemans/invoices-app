<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Admin</th>
      <th>Reader</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.admin %></td>
        <td><%= user.reader %></td>
        <td class="menu align-right">
            <ul class="button-group">
                <li><%= link_to 'Show', user, class: 'button tiny' %></li>
                <li><%= link_to 'Edit', edit_user_path(user), class: 'button tiny' %></li>
                <li><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button tiny' %></li>
            </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'button' %>
